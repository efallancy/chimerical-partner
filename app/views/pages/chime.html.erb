<h1 class="title">Chimerical Partner</h1>

<div class="pure-g container">
  <!-- Will have the greetings, weather and music playlist -->
  <div class="pure-u-6-24 misc" id="misc">
    <div class="greetings">
    </div>
    <div class="weather">
      <div class="current-weather">
        <div class="pure-g weather-details-top">
          <div class="pure-u-1-2 weather-icon">
            <%= image_tag( image_path( "weather/Umbrella.svg" ), class: "custom-img" ) %>
          </div>
          <div class="pure-u-1-2 weather-info">?&#176;</div>
        </div>
        <div class="pure-g weather-details-bottom">
          <div class="pure-u-1-2 weather-summary">
            Please ensure that you enable location settings in your browser.
          </div>
          <div class="pure-u-1-2 weather-high-low">
            <%= image_tag( image_path( "weather/Shades.svg" ), class: "custom-img" ) %>
          </div>
        </div>
      </div>

    </div>
    <div class="music">
      <div class="spotify-message">
        <p><%= @initial_state[ :spotify ][ "message" ] %></p>
      </div>
      <div class="playlists">
        <% @initial_state[ :spotify ][ "playlists" ][ "items" ].each do | playlist | %>
          <div class="playlist-album" data-url="https://embed.spotify.com/?uri=<%= playlist[ "uri" ] %>">
            <img src="<%= playlist[ "images" ].first[ "url" ] %>" alt="<%= playlist[ "name" ] %>" class="album">
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="pure-u-8-24 news-feed" id="newsfeed">
    <div class="news-nav">
      <p>
      News categories:
        <select name="sections" id="news-section">
          <option value="home">Home</option>
          <option value="opinion">Opinion</option>
          <option value="world">World</option>
          <option value="national">National</option>
          <option value="politics">Politics</option>
          <option value="upshot">Upshot</option>
          <option value="nyregion">New York Region</option>
          <option value="business">Business</option>
          <option value="technology">Technology</option>
          <option value="science">Science</option>
          <option value="health">Health</option>
          <option value="sports">Sports</option>
          <option value="arts">Arts</option>
          <option value="books">Books</option>
          <option value="movies">Movies</option>
          <option value="theater">Theater</option>
          <option value="sundayreview">Sunday Review</option>
          <option value="fashion">Fashion</option>
          <option value="tmagazine">Times Magazine</option>
          <option value="food">Food</option>
          <option value="travel">Travel</option>
          <option value="magazine">Magazine</option>
          <option value="realestate">Realestate</option>
          <option value="automobiles">Automobiles</option>
          <option value="obituaries">Obituaries</option>
          <option value="insider">Insider</option>
        </select>
      </p>
    </div>
    <div class="news-list" id="newslist">
      <% @initial_state[ :news ][ "results" ].each do | article | %>
        <div class="news-content" data-url="https://www.google.com/search?q=<%= article[ "url" ] %>">
          <p class="news-headline"><%= article[ "title" ] %></p>
          <p class="news-abstract"><%= article[ "abstract" ] %></p>
          <p class="news-author"><%= article[ "byline" ] %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="pure-u-10-24 news-details-quote" id="news-details">
    <div class="quotes">
      <%= @initial_state[ :quote ][ :content ].html_safe %>
      <p style="text-align: center">~ <%= @initial_state[ :quote ][ :author ] %> ~</p>
    </div>
  </div>
</div>
